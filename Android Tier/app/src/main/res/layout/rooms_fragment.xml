<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/background2"
    >


    <TextView

        android:id="@+id/room"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:gravity="left"
        android:text="Room 1"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/temperaturesign"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:gravity="left"

        android:text="Temperature"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room" />

    <TextView

        android:id="@+id/humiditysign"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:gravity="left"

        android:text="Humidity"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperaturesign" />


    <TextView

        android:id="@+id/dbhumidity"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:text="N/a"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/humiditysign"
        app:layout_constraintTop_toBottomOf="@+id/dbtemperature" />

    <TextView

        android:id="@+id/dbCO2"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="N/a"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/CO2sign"
        app:layout_constraintTop_toBottomOf="@+id/dbhumidity" />

    <TextView

        android:id="@+id/dbtemperature"
        android:layout_width="125dp"
        android:layout_height="33dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="112dp"
        android:gravity="left"
        android:text="N/a"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/temperaturesign"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/CO2sign"
        android:layout_width="157dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:gravity="left"

        android:text="CO2"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humiditysign" />

    <Button
        android:id="@+id/toMetrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="44dp"
        android:text="Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toEndOf="@+id/dbhumidity"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

