<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background2"
    tools:context=".view.LogInFragment">

    <TextView
        android:id="@+id/textViewSettings"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#1682CA"
        android:textStyle="bold"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Activate temperature and humidity notifications" />


    <!--min temp-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/minTempTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/minTempEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Temperature"
            android:inputType="numberSigned"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck"
            android:backgroundTint="#e8fffb"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!--max temp-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/maxTempTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minTempTil"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/maxTempEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Temperature"
            android:inputType="number"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck"
            android:backgroundTint="#e8fffb"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!--min humidity-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/minHumidityTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maxTempTil"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/minHumidityEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Humidity"
            android:inputType="numberSigned"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck"
            android:backgroundTint="#e8fffb"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!--max humidity-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/maxHumidityTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minHumidityTil"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/maxHumidityEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Humidity"
            android:inputType="number"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck"
            android:backgroundTint="#e8fffb"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonAddNorms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:layout_below="@id/maxHumidityTil"
        android:layout_marginTop="20dp"/>


</RelativeLayout>