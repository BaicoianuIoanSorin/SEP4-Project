<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:key="room_prefs">

    <PreferenceCategory app:title="Temperature Levels">


 <SeekBarPreference


        <SeekBarPreference

          app:key="maxTemp"


            app:key="minTemp"

            app:showSeekBarValue="true"
            app:title="Maximum Temperature"
            android:max="30"
            />

        <SeekBarPreference
            app:key="maxTemp"
            app:showSeekBarValue="true"
            app:title="Maximum Temperature"

            />


    </PreferenceCategory>

    <PreferenceCategory app:title="Humidity Levels">

        <SeekBarPreference
            app:key="minHumidity"
            app:showSeekBarValue="true"
            app:title="Minimum Humidity" />

        <SeekBarPreference
            app:key="maxHumidity"
            app:showSeekBarValue="true"
            app:title="Maximum Humidity" />

    </PreferenceCategory>

</PreferenceScreen>