<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Temperature and Humidity Levels">


        <SeekBarPreference
            app:key="minTemp"
            app:max="30"
            app:showSeekBarValue="true"
            app:title="Minimum Temperature" />

        <SeekBarPreference
            app:key="maxTemp"
            app:showSeekBarValue="true"
            app:title="Maximum Temperature" />

        <SeekBarPreference
            app:key="minHumidity"
            app:showSeekBarValue="true"
            app:title="Minimum Humidity" />

        <SeekBarPreference
            app:key="maxHumidity"
            app:showSeekBarValue="true"
            app:title="Maximum Humidity" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="enableNotifications"
            app:title="Enable temperature and humidity notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Temperature Scale">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:dependency="fahrenheit"
            app:key="celcius"
            app:title="Celcius" />

        <SwitchPreferenceCompat
            app:dependency="celcius"
            app:key="fahrenheit"
            app:title="Fahrenheit" />


    </PreferenceCategory>

</PreferenceScreen>